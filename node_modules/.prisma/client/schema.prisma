generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Proyecto {
  id             Int       @id @default(autoincrement())
  titulo         String
  descripcion    String
  tecnologias    String
  imagenUrl      String?
  imagenPublicId String?
  demoUrl        String?
  githubUrl      String?
  destacado      Boolean   @default(false)
  nivel          String?
  categoriaId    Int
  categoria      Categoria @relation(fields: [categoriaId], references: [id])
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @default(now()) @updatedAt
}

model Categoria {
  id        Int        @id @default(autoincrement())
  nombre    String     @unique
  proyectos Proyecto[]
}

model Servicio {
  id          Int    @id @default(autoincrement())
  nombre      String
  descripcion String
  precio      Float?
}

model RedSocial {
  id     Int     @id @default(autoincrement())
  nombre String
  url    String
  icono  String
  activo Boolean @default(true)
}

model Experiencia {
  id          Int       @id @default(autoincrement())
  puesto      String
  empresa     String
  fechaInicio DateTime
  fechaFin    DateTime?
  actualmente Boolean   @default(false)
  descripcion String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Perfil {
  id                Int     @id @default(1)
  nombreCompleto    String
  inicialesLogo     String
  telefono          String
  tituloHero        String  @default("defaultTitle") // Valor por defecto
  perfilTecnicoHero String  @default("defaultProfile") // Valor por defecto
  descripcionHero   String? @default("defaultDescription") // Valor por defecto

  descripcionUnoSobreMi String // Obligatoria
  descripcionDosSobreMi String // Obligatoria

  cvUrl               String?
  cvPublicId          String?
  fotoHeroUrl         String?
  fotoHeroPublicId    String?
  fotoSobreMiUrl      String?
  fotoSobreMiPublicId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
